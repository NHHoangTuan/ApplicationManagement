<Window x:Class="ApplicationManagement.ConfigDataBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationManagement"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="ConfigDataBase" Height="250" Width="330" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">

    <Border Background="LightBlue" CornerRadius="10">
        <Grid Name="MainContainer">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="45"/>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>


            <Image Source="/Assets/Images/Design/close.png" Grid.Column="1" 
                   Grid.RowSpan="2" Panel.ZIndex="1" MouseUp="Image_MouseUp" Style="{StaticResource imgClose}"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
            
            <!--Hiển thị title-->
            <TextBlock
                Grid.Row="1"
        Grid.Column="1"
        Text="Database configuration"
        Margin="10"
        Foreground="Black"
        VerticalAlignment="Center"
        FontSize="20"
        FontWeight="Bold"
        FontFamily="Segoe UI"
        >
            </TextBlock>

            <Border 
        Grid.Row="2"
        BorderThickness="0.5" BorderBrush="Blue" CornerRadius="5" 
        Background="White"
        Height="30"
        Width="275"
        Margin="10"
        HorizontalAlignment="Left">
                <Grid
            Width="265"
            Margin="0"
            HorizontalAlignment="Center">
                    <TextBox KeyDown="ServerTermTextBox_KeyDown"
                BorderThickness="0"
                VerticalContentAlignment="Center"
                FontSize="13"
                Width="265"
                x:Name="ServerTermTextBox">
                    </TextBox>
                    <TextBlock IsHitTestVisible="False" Text="Enter server" 
                           VerticalAlignment="Center"
                           FontSize="13"
                           HorizontalAlignment="Left" Margin="5,0,0,0"
                           Foreground="DarkGray">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=ServerTermTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            

            <!--Hiển thị nút bấm đăng xuất-->
            <Button
            Grid.Row="3" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Name="Button"
            Width="90"
            Height="35"
            Style="{StaticResource MyButtonStyle}"
            BorderThickness="0.5"
            BorderBrush="Blue"
            Click="Button_Click"
        >
                <StackPanel
            Orientation="Horizontal">
                    <Icon:PackIconMaterial 
                    Name="Logout"
                    Width="16"
                    Height="16"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Kind="ArrowRight"
                    Margin="5"
                    Foreground="#8B4000"
                    />
                    <TextBlock
                    FontWeight="Bold"
                    Foreground="#8B4000"
                    VerticalAlignment="Center"
                >Login</TextBlock>
                </StackPanel>
            </Button>
        </Grid>
    </Border>
</Window>
